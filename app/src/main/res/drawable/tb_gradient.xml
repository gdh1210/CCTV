<!-- res/drawable/toggle_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#208020" android:endColor="#202020" android:startColor="#303030" android:type="linear" /> <!-- ON 상태의 배경색 -->
            <corners android:radius="5dp" />
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#204060" android:endColor="#202020" android:startColor="#303030" android:type="linear" /> <!-- OFF 상태의 배경색 -->
            <corners android:radius="5dp" />
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>
</selector>
